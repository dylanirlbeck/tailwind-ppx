  "dependencies": {
    "@glennsl/bs-jest": "^0.4.10",
    "bs-platform": "7.0.1",
    "bs-react-testing-library": "^0.6.0",
    "jest": "^25.1.0",
    "minimist": "^1.2.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "reason-react": "^0.7.0"
  },
  "jest": {
    "testMatch": [
      "**/src/**/*_test.bs.js"
    ]
  },
  "devDependencies": {
    "tailwindcss": "^1.4.1"
  }
}
